<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".activity.HouseholdDetails"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/collapsing_toolbar_appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#228B22">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="@color/customAppThemeBlue"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbarx"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="#A5023C"
                    app:layout_collapseMode="pin"
                    app:theme="@style/ThemeOverlay.AppCompat.Light" />

                <LinearLayout
                    android:id="@+id/profile_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:background="#A5023C"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1.5">


                    <org.smartregister.view.customcontrols.CustomFontTextView
                        android:id="@+id/mother_name"
                        style="@style/CustomFontTextViewStyle.ClientList.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"
                        android:paddingStart="0dp"
                        android:text="Hope Chanda"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/activity_title_size" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingStart="0dp"
                            android:text="AGE : "
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/white" />

                        <org.smartregister.view.customcontrols.CustomFontTextView
                            android:id="@+id/mother_age"
                            style="@style/CustomFontTextViewStyle.ClientList.Light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:paddingStart="0dp"
                            android:text="5"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="@color/white" />

                    </LinearLayout>


                    <Button
                        android:id="@+id/hh_prof"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/transparent_white_button"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:paddingStart="@dimen/profile_btn_registration_info_padding"
                        android:paddingTop="0dp"
                        android:paddingEnd="@dimen/profile_btn_registration_info_padding"
                        android:text="Household Profile"
                        android:textAllCaps="false"
                        android:visibility="gone"/>


                </LinearLayout>



            </com.google.android.material.appbar.CollapsingToolbarLayout>


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#A5023C"
                app:tabContentStart="0dp"
                app:tabGravity="fill"
                app:tabIndicatorColor="#E2E363"
                app:tabIndicatorHeight="4dp"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/white"
                app:tabTextAppearance="@style/CustomFontTextViewStyle.tabIndicator.sub.white" />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/collapsing_toolbar_appbarlayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />



        <LinearLayout
            android:id="@+id/menu_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fabx"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/mother_form"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/callFab3"
                    android:background="#666666"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/add_mother"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Edit Mother"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="italic"
                        android:visibility="visible" />

                </RelativeLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/callFab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:backgroundTint="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/baseline_mode_edit_24"   />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/anc_details"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/callFabAnc"
                    android:background="#666666"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/add_anc_detalis"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="ANC Details"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:gravity="center"
                        android:visibility="visible" />

                </RelativeLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/callFabAnc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:backgroundTint="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_input_add"  />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/labour_details"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/callFabLabour"
                    android:background="#666666"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/add_labour_detalis"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Labor and Delivery Details"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:visibility="visible"
                        android:gravity="center"/>

                </RelativeLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/callFabLabour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:backgroundTint="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_input_add"  />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/postnatal_details"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/callFabPostnatal"
                    android:background="#666666"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/add_postnatal_detalis"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Postnatal Care"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:visibility="visible"
                        android:gravity="center"/>

                </RelativeLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/callFabPostnatal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:backgroundTint="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_input_add"  />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/child_form"
                android:onClick="onClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/callFab2"
                    android:background="#666666"
                    android:elevation="2dp"
                    android:gravity="center"
                    android:minWidth="50dp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/add_child"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="Add Child"
                        android:textColor="@color/white"
                        android:textStyle="italic"
                        android:visibility="visible"
                        android:gravity="center"/>

                </RelativeLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/callFab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:backgroundTint="@color/white"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_input_add"  />

            </RelativeLayout>


        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:onClick="onClick"
            android:tint="@android:color/white"
            app:backgroundTint="@color/text_black"
            app:fabSize="normal"
            app:srcCompat="@drawable/baseline_mode_edit_24" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
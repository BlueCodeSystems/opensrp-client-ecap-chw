<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_columns"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:elevation="20dp"
    >


    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/edit_me"
        android:tint="#696969"
        android:layout_marginRight="70dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/delete_record"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:tint="#696969"
        android:layout_centerInParent="true"
        android:src="@drawable/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/itemm"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/signature_view"
            android:layout_width="wrap_content"
            android:layout_height="80dp"

            android:paddingLeft="@dimen/contact_drawable_padding"
            android:paddingTop="@dimen/contact_small_padding"
            android:paddingBottom="@dimen/contact_small_padding"


            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />


        <LinearLayout
            android:id="@+id/qlayout"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                style="@style/CustomFontTextViewStyle.ClientList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Date Referred:"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                android:textStyle="bold" />


            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/date"
                android:layout_marginRight="10dp"
                style="@style/CustomFontTextViewStyle.ClientList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="22-09-2022"
                android:textColor="@color/text_black"
                android:textSize="18sp" />




        </LinearLayout>



    </LinearLayout>


    <View
        android:layout_below="@+id/itemm"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>

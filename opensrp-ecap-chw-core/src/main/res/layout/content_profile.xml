<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/notification_and_referral_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notification_and_referral_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <View
        android:id="@+id/view_notification_and_referral_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/notification_and_referral_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/last_visit_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_notification_and_referral_row"
        android:background="@drawable/list_item_background_selctor"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/tick_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/childrow_history" />

        <ImageView
            android:id="@+id/arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/row_goto" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_last_vist_day"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tick_image"
            android:gravity="center_horizontal"
            android:text="@string/last_visit_40_days_ago"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_medical_hstory"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_last_vist_day"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tick_image"
            android:text="@string/view_medical_history"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/light_grey_text"
            />

    </RelativeLayout>

    <View
        android:id="@+id/view_last_visit_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/last_visit_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/vaccine_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_visit_row"
        android:background="@drawable/list_item_background_selctor"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/view_vaccine_history_tick_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/childrow_history" />

        <ImageView
            android:id="@+id/view_vaccine_history_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/row_goto" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_view_vaccine_history"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/view_vaccine_history_tick_image"
            android:gravity="center_horizontal"
            android:text="@string/view_vaccine_histroy"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:id="@+id/view_vaccine_history_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/last_visit_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/most_due_overdue_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaccine_history"
        android:background="@drawable/list_item_background_selctor"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/cross_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/childrow_upcoming" />

        <ImageView
            android:id="@+id/right_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/row_goto" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_name_due"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/right_arrow_image"
            android:layout_toRightOf="@+id/cross_image"
            android:gravity="left|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_upcoming_service"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_name_due"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/cross_image"
            android:text="@string/view_upcoming_services"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <View
        android:id="@+id/view_most_due_overdue_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/most_due_overdue_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/view_due_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_most_due_overdue_row"
        android:background="@drawable/list_item_background_selctor"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/view_due_today_row_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/childrow_upcoming" />

        <ImageView
            android:id="@+id/view_due_today_row_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/row_goto" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_view_due_today"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/view_due_today_row_image"
            android:gravity="center_horizontal"
            android:text="@string/see_vaccines_due_today"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <View
        android:id="@+id/view_due_today_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/view_due_today"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/sick_visit_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_due_today_row"
        android:background="@drawable/list_item_background_selctor"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/sick_visit_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/rowicon_sickchild" />

        <ImageView
            android:id="@+id/sick_visit_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/row_goto" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_sick_visit_has"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sick_visit_image"
            android:gravity="center_horizontal"
            android:text="@string/sick_visit_on"
            android:textColor="@android:color/black" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_sick_visit_profile"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_sick_visit_has"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sick_visit_image"
            android:text="@string/view_sick_visits"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <View
        android:id="@+id/view_sick_visit_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/sick_visit_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/family_has_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_sick_visit_row"
        android:background="@drawable/list_item_background_selctor"
        android:padding="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/family_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/childrow_family" />

        <ImageView
            android:id="@+id/family_arrow_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/row_goto" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/textview_family_has"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/family_image"
            android:gravity="center_horizontal"
            android:text="@string/family_has_nothing_due"
            android:textColor="@android:color/black" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/text_view_family_profile"
            style="@style/CustomFontTextViewStyle.ListView.Normal.MultipleLines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_family_has"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/family_image"
            android:text="@string/go_to_family_s_profile"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <View
        android:id="@+id/view_family_row"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/family_has_row"
        android:background="@color/light_grey"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>